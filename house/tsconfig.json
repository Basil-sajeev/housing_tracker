{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "jsx": "react-jsx",            // ✅ Fixes JSX error
    "moduleResolution": "node",    // ✅ Ensures proper module resolution
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
     "resolveJsonModule": true,
  },
  "include": ["src"]
}
